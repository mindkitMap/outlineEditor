{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": [
    "./templates",
    "./dist"
  ],
  "include": [
    "src"
  ]
}
